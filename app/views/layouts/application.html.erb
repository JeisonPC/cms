<!DOCTYPE html>
<html>
  <head>
    <title>Cms</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="<%= 'grid' unless request.path == new_user_session_path %>" >
    <% if user_signed_in? %>
      <section class="sidebar">
        <%= render "shared/sidebar" %>
      </section>
    <% end %>
    <section class="<%= request.path == new_user_session_path ? 'body-session' : 'body' %>">
      <%= yield %>
    </section>
  </body>
</html>
