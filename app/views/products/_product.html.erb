<div class="card-product" id="<%= dom_id product %>">
  <div >
    <h3>Nombre:</h3>
    <%= product.name %>
  </div>
  <div>
    <h3>Precio:</h3>
    <%= product.price %>
  </div>
  <div>
    <h3>Cantidad:</h3>
    <%= product.quantity %>
  </div>
  <div>
    <% if product.photos.any? %>
      <% product.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 100, width: 100, crop: :fill %>
      <% end %>
    <% else %>
      <%= image_tag 'product-default-image.png', height: 100, width: 100 %>
    <% end %>
  </div>
  <%= link_to "MÃ¡s info", product %>
</div>
